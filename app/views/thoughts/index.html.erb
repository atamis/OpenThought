<div>
<h1>Thoughts</h1>

<%= render :partial => "remote_form" %>

<table class="table-striped" id="thoughts">
  <% @thoughts.each do |thought|%>
    <tr id=<%= thought.id %>>
      <td>
        <div class="thought_text">
          <%= raw thought.markdown%>
        </div>
        <a href="#" class="delete">D</a>
        <span class="date">
          <%= thought.created_at %>
        </span>
      </td>
    </tr>
  <% end %>
</table>

<% content_for :sidebar do %>
  <div id="tags"></div>
<% end %>

<script type="text/javascript">
  /*populate_table("#thoughts", '/thoughts.json', function() {
    enable_delete("#thoughts .delete")
  });*/

  populate_tags("#tags");
</script>
</div>
