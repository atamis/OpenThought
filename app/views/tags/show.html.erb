<h1><%= params[:tag] %></h1>

<%= render :partial => "thoughts/remote_form" %>

<table class="zebra-striped" id="thoughts">
</table>

<% content_for :sidebar do %>
  <div id="tags"></div>
<% end %>

<script type="text/javascript">
$(function() {
  populate_table("#thoughts", '/tags/<%= params[:tag] %>.json', function() {
    enable_delete("#thoughts .delete")
  });

  populate_tags("#tags");
})
</script>
